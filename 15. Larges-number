const compare = (a, b) => {
    a = a.toString()
    b = b.toString()

    firstNumber = a.concat(b)
    secondNumber = b.concat(a)

    if(firstNumber > secondNumber){
        return true
    }
    else {
        return false
    }
}

const largestNumber = (arr) => {
    let n = arr.length;
    let counter = 0;
    let nonZero;

    arr.sort((a, b) => {
        if (a < b) return -1;
    })

    for(let i of arr){
        for(let j=0; j<n-1; j++){
            nonZero = arr[j] + arr[j+1];
            if(nonZero !== 0){
                if(!compare(arr[j], arr[j+1])){
                    temp = arr[j]
                    arr[j] = arr[j+1]
                    arr[j+1] = temp
                }
            }
        }
    }

    for(let i in arr){
        if(arr[i] === 0){
            counter++;
        }
    }

    if(counter === n){
        arr.splice(0, n-1)
    }

    return arr 
}
