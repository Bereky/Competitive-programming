const reArrangeArray = (nums) => {

    const n = nums.length;
    let temp;

    for(let i = 0; i<n-2; i++){
        if(nums[i] < nums[i+1]){
            if(nums[i+1] < nums[i+2]){
                temp = nums[i+1]
                nums[i+1] = nums[i+2]
                nums[i+2] = temp
            }
        }
        else {
            if(nums[i+1] > nums[i+2]){
                temp = nums[i+1]
                nums[i+1] = nums[i+2]
                nums[i+2] = temp
            } 
        }
    }
    return nums
}
