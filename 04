const bubbleSort = (arr) => {
    let n = arr.length;
    let swaps = 0;
    let temp;
    for(let i = 0; i<n; i++){
        for(let j = 0; j<n-1; j++){
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swaps++;
            }
        }
    }
    console.log(`Array is sorted in ${swaps} swaps`);
    console.log(`First Element: ${arr[0]}`)
    console.log(`Last Element: ${arr[n-1]}`)
}
